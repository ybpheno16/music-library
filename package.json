{
  "name": "music-library-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm:dev:*\"",
    "dev:main-app": "npm run dev -w main-app",
    "dev:music-library": "npm run dev -w music-library",
    "build": "npm run build -w music-library && npm run build -w main-app",
    "preview": "npm run preview -w main-app"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "vite": "^7.1.4"
  }
}
